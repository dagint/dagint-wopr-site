---
import Layout from '@/layouts/Layout.astro';

const serviceGroups = [
  {
    name: 'Support & repair',
    icon: 'support',
    items: [
      { title: 'Computer repair', description: 'Hardware and software diagnostics, virus removal, and repairs for PCs and Macs.' },
      { title: 'Remote support', description: 'Secure remote access to fix issues quickly—no on-site visit required.' },
      { title: 'Troubleshooting', description: 'Slow PCs, crashes, blue screens. We find the cause and fix it.' },
      { title: 'Data recovery', description: 'Recovery from failed drives, accidental deletion, or corruption.' },
      { title: 'Setup & maintenance', description: 'New machine setup, software installs, backups, and ongoing tune-ups.' },
    ],
  },
  {
    name: 'Infrastructure & security',
    icon: 'security',
    items: [
      { title: 'Networking', description: 'Wi‑Fi, routers, and home or small-office networks—fast and reliable.' },
      { title: 'Security', description: 'Endpoint protection, firewalls, and security best practices for your environment.' },
      { title: 'Update management', description: 'Patch and update management for Windows, software, and firmware.' },
      { title: 'Authentication', description: 'SSO, MFA, and identity setup so access stays secure and simple.' },
    ],
  },
  {
    name: 'Managed services & cloud',
    icon: 'cloud',
    items: [
      { title: 'MSP (managed services)', description: 'Proactive monitoring, maintenance, and support so you can focus on your work.' },
      { title: 'Cloud', description: 'Microsoft 365, Azure, backups, and cloud migration or hybrid setup.' },
      { title: 'Hardware & software lifecycle', description: 'Planning, procurement, and refresh for desktops, servers, and key software.' },
    ],
  },
];
---

<Layout title="Services">
  <section class="page-banner flex items-end pb-8 sm:pb-10">
    <div class="absolute inset-0 opacity-40" aria-hidden="true">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="wopr-grid-services" width="32" height="32" patternUnits="userSpaceOnUse">
            <circle cx="16" cy="16" r="2" fill="var(--wopr-accent)" />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#wopr-grid-services)" />
      </svg>
    </div>
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 w-full">
      <h1 class="page-title-on-banner">Services</h1>
      <p class="mt-2 text-white/95 text-sm sm:text-base max-w-2xl">
        From one-off repair to full managed services—support, security, updates, and cloud.
      </p>
    </div>
  </section>

  <div class="page-section">
    <div class="space-y-14 sm:space-y-16">
      {serviceGroups.map((group, i) => (
        <section class={i % 2 === 1 ? 'section-alt -mx-4 sm:-mx-6 px-4 sm:px-6 py-8 sm:py-10 rounded-2xl' : ''}>
          <div class="flex items-center gap-4 mb-6">
            <div class="shrink-0 w-12 h-12 rounded-xl bg-[var(--wopr-primary)]/10 flex items-center justify-center" aria-hidden="true">
              {group.icon === 'support' && (
                <svg class="w-6 h-6 text-[var(--wopr-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8M12 17v4M2 9h20"/></svg>
              )}
              {group.icon === 'security' && (
                <svg class="w-6 h-6 text-[var(--wopr-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
              )}
              {group.icon === 'cloud' && (
                <svg class="w-6 h-6 text-[var(--wopr-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/></svg>
              )}
            </div>
            <h2 class="text-sm font-semibold text-[var(--wopr-secondary)] uppercase tracking-wider flex items-center gap-2">
              <span class="w-1 h-4 rounded-full bg-[var(--wopr-accent)]" aria-hidden="true" />
              {group.name}
            </h2>
          </div>
          <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {group.items.map((s) => (
              <li>
                <a
                  href="/contact"
                  class="card group block p-5 border-l-4 border-l-[var(--wopr-accent)]/50 hover:border-l-[var(--wopr-accent)] hover:shadow-md transition-all duration-200 relative overflow-hidden"
                >
                  <div class="absolute top-2 right-2 w-16 h-16 opacity-[0.07]" aria-hidden="true">
                    <svg class="w-full h-full" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="12" r="1.5" fill="var(--wopr-accent)"/><circle cx="6" cy="6" r="1" fill="var(--wopr-accent)"/><circle cx="18" cy="6" r="1" fill="var(--wopr-accent)"/><circle cx="6" cy="18" r="1" fill="var(--wopr-accent)"/><circle cx="18" cy="18" r="1" fill="var(--wopr-accent)"/></svg>
                  </div>
                  <h3 class="font-semibold text-[var(--wopr-primary)] text-base group-hover:text-[var(--wopr-secondary)] transition-colors relative">
                    {s.title}
                  </h3>
                  <p class="text-gray-600 text-sm mt-1.5 leading-relaxed relative">{s.description}</p>
                  <span class="inline-block mt-3 text-xs font-medium text-[var(--wopr-accent)] opacity-0 group-hover:opacity-100 transition-opacity relative">
                    Get a quote →
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </div>

    <div class="mt-14 relative overflow-hidden rounded-2xl bg-[var(--wopr-primary)] text-white shadow-lg shadow-[var(--wopr-primary)]/20">
      <div class="absolute inset-0 opacity-40" aria-hidden="true">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="wopr-grid-cta" width="32" height="32" patternUnits="userSpaceOnUse">
              <circle cx="16" cy="16" r="2" fill="var(--wopr-accent)" />
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#wopr-grid-cta)" />
        </svg>
      </div>
      <div class="relative z-10 p-6 sm:p-8">
        <p class="font-semibold text-lg">Need a mix of these?</p>
        <p class="text-blue-100 text-sm mt-1">
          We tailor support to your size and needs—from ad‑hoc repair to ongoing MSP. No lock-in.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center mt-5 px-5 py-2.5 rounded-lg text-sm font-medium bg-white text-[var(--wopr-primary)] hover:bg-blue-50 transition-colors shadow-sm"
        >
          Talk to us
        </a>
      </div>
    </div>
  </div>
</Layout>
