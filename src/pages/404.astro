---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Page not found">
  <div class="page-section max-w-xl text-center">
    <h1 class="page-title">Page not found</h1>
    <p class="text-gray-600 mt-2">The page you’re looking for doesn’t exist or was moved.</p>
    <a href="/" class="inline-flex items-center mt-6 px-5 py-2.5 rounded-lg text-sm font-medium text-white bg-[var(--wopr-primary)] hover:bg-[var(--wopr-secondary)] transition-colors">
      Back to home
    </a>
  </div>
</Layout>
