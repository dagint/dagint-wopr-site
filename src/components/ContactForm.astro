---
// Formspree: replace YOUR_FORM_ID with actual Formspree form id for production
const formAction = 'https://formspree.io/f/YOUR_FORM_ID';
---

<form
  action={formAction}
  method="POST"
  class="space-y-6 max-w-xl"
>
  <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" aria-hidden="true" />
  <div>
    <label for="name" class="block font-mono text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-secondary/50 bg-white dark:bg-surface-light text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-accent focus:border-transparent"
    />
  </div>
  <div>
    <label for="email" class="block font-mono text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-secondary/50 bg-white dark:bg-surface-light text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-accent focus:border-transparent"
    />
  </div>
  <div>
    <label for="message" class="block font-mono text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Message</label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-secondary/50 bg-white dark:bg-surface-light text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-accent focus:border-transparent resize-y"
    />
  </div>
  <button
    type="submit"
    class="w-full sm:w-auto px-6 py-3 rounded-lg font-mono font-semibold text-primary bg-accent hover:bg-accent-dim transition-colors"
  >
    Send message
  </button>
</form>

<p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
  Prefer email? <a href="mailto:info@dagint.com" class="text-accent hover:underline">info@dagint.com</a>
</p>
