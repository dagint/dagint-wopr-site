---
interface Props {
  title: string;
  description: string;
  icon: string; // emoji or icon name
}

const { title, description, icon } = Astro.props;
---

<div class="group p-6 rounded-xl border border-gray-200 dark:border-secondary/50 bg-white dark:bg-surface-light hover:border-accent/50 dark:hover:border-accent/50 hover:glow-border transition-all duration-300">
  <div class="text-3xl mb-3 font-mono text-accent" aria-hidden="true">{icon}</div>
  <h3 class="font-mono font-bold text-lg text-primary dark:text-accent mb-2">{title}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
</div>
