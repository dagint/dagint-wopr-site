---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((p) => p.data.published !== false)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<section class="py-16 border-t border-gray-200 dark:border-secondary/50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-end mb-8">
      <h2 class="font-mono text-2xl font-bold text-primary dark:text-accent">From the blog</h2>
      <a href="/blog" class="font-mono text-sm text-secondary dark:text-accent hover:underline">View all â†’</a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a
          href={`/blog/${post.slug}`}
          class="group block p-4 rounded-xl border border-gray-200 dark:border-secondary/50 bg-white dark:bg-surface-light hover:border-accent/50 transition-colors"
        >
          <time class="font-mono text-xs text-gray-500 dark:text-gray-400" datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          </time>
          <h3 class="font-mono font-bold text-primary dark:text-accent mt-1 group-hover:text-secondary dark:group-hover:text-60A5FA transition-colors">
            {post.data.title}
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 line-clamp-2">{post.data.summary}</p>
        </a>
      ))}
    </div>
  </div>
</section>
