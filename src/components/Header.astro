---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 bg-white/90 dark:bg-primary/95 backdrop-blur-md border-b border-gray-200 dark:border-secondary/50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="font-mono font-bold text-lg text-primary dark:text-accent hover:text-secondary dark:hover:text-60A5FA transition-colors">
        DaGint
      </a>
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium transition-colors">Home</a>
        <a href="/services" class="text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium transition-colors">Services</a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium transition-colors">About</a>
        <a href="/blog" class="text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium transition-colors">Blog</a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium transition-colors">Contact</a>
        <ThemeToggle />
      </nav>
      <div class="flex items-center gap-4 md:hidden">
        <ThemeToggle />
        <button id="mobile-menu-btn" type="button" class="p-2 text-gray-700 dark:text-gray-300" aria-label="Open menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    <nav id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-200 dark:border-secondary/50 pt-2">
      <div class="flex flex-col gap-2">
        <a href="/" class="py-2 text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium">Home</a>
        <a href="/services" class="py-2 text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium">Services</a>
        <a href="/about" class="py-2 text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium">About</a>
        <a href="/blog" class="py-2 text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium">Blog</a>
        <a href="/contact" class="py-2 text-gray-700 dark:text-gray-300 hover:text-secondary dark:hover:text-accent font-medium">Contact</a>
      </div>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
